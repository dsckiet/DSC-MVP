<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="8dp"
    android:elevation="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <kr.pe.burt.android.lib.androidgradientimageview.AndroidGradientImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_grad"
        android:scaleType="fitXY"
        app:giv_x="0.0"
        app:giv_y="0.0"
        app:giv_rotate="45.0"
        app:giv_startColor="@android:color/transparent"
        app:giv_startOffset="0.15"
        app:giv_middleColor="#73b6ff"
        app:giv_middleOffset="0.35"
        android:alpha="0.7"
        app:giv_endColor="@color/colorPrimary"
        app:giv_endOffset="0.5"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/tv_story_title"
                style="@style/CustomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developers era of KIET"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_story_description"
                style="@style/CustomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="DSC helped a lot of young studenhelped a lot of young students to idehelped a lot of young students to idehelped a lot of young students to idehelped a lot of young students to idehelped a lot of young students to idehelped a lot of young students to idets to identify their skills, and led them to learn development technologies in early stage of College."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
